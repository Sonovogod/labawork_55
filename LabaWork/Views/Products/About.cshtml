@model ProductViewModel

@{
    ViewBag.Title = "Подробнее";
    Layout = "_Layout";
}

<div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
    <div class="col">
        <div class="card h-100">
            <img src="@Model.Image" class="p-2 card-img-top" alt="@Model.Model">
            <div class="card-body">
                <h5 class="card-title">@Model.Category.Name @Model.ProductName @Model.Model</h5>
                <p class="card-text">@Model.Description</p>
                <p>Производитель: @Model.Brand.Name</p>
                <p>Цена: @Model.Price</p>
            </div>
            <div class="row px-3">
                <div class="col-auto">
                    <a class="my-3 btn btn-success"
                       asp-action="Create"
                       asp-controller="Orders"
                       asp-route-id="@Model.Id">
                        Заказать
                    </a>
                </div>
                <div class="col-auto">
                    <a class="my-3 btn btn-outline-info"
                       asp-action="Edit"
                       asp-controller="Products"
                       asp-route-id="@Model.Id">
                        Изменить
                    </a>
                </div>
                <div class="col-auto">
                    <a class="my-3 btn btn-danger"
                       asp-action="Delete"
                       asp-controller="Products"
                       asp-route-id="@Model.Id">
                        Удалить
                    </a>
                </div>
            </div>
            <div class="card-footer">
                <small class="text-body-secondary">Добавлено: @Model.DateOfCreate</small>
                <small class="text-body-secondary">Изменено: @Model.DateOfUpdate</small>
            </div>
        </div>
    </div>
</div>
