@model CreateOrderViewModel

@{
    ViewBag.Title = "Создание заказа";
    Layout = "_Layout";
}

<h2>Заказ</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="Orders" method="post">
            <div class="form-group mb-3">
                <label for="Name" class="mb-2">Имя покупателя</label>
                <input asp-for="Order.Name"
                       type="text"
                       class="form-control"
                       id="Name"
                       placeholder="Имя">
                <span class="text-danger" asp-validation-for="Order.Name"></span>
            </div>
            <div class="form-group mb-3">
                <label for="phone" class="mb-2">Номер телефона</label>
                <input asp-for="Order.PhoneNumber"
                       type="text"
                       class="form-control"
                       id="phone"
                       placeholder="+ 7 777 777 77 77">
                <span class="text-danger" asp-validation-for="Order.PhoneNumber"></span>
            </div>
            <div class="form-group mb-3">
                <label for="adress" class="mb-2">Адрес</label>
                <input asp-for="Order.Address"
                       type="text"
                       class="form-control"
                       id="adress"
                       placeholder="Сейфуллина 498, 2 этаж, офис 207">
                <span class="text-danger" asp-validation-for="Order.Address"></span>
            </div>
            <div class="form-group mb-3">
                <label for="device" class="mb-2">Выбран товар</label>
                <input disabled type="text"
                       class="form-control"
                       id="device"
                       value="@Model.ShortProduct.ProductName">
            </div>
            <input type="hidden" asp-for="Order.ProductId" value="@Model.ShortProduct.Id">

            <button type="submit" class="btn btn-outline-info mt-3">Заказать</button>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}